<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- 整体的背景颜色 -->
  <item android:drawable="@color/theme_color" />
  <!-- 中间的图片 -->
  <item>
    <bitmap
      android:gravity="center"
      android:scaleType="center"
